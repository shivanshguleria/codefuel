extends layout 
block content
 main.form-signin.w-100.mx-auto(style="width: 200px;")
  form
        .form-floating
          input#floatingInput.form-control(type="email", placeholder="name@example.com")
          label(for="floatingInput") Email address
        .form-floating
          input#floatingPassword.form-control(type="password", placeholder="Password")
          label(for="floatingPassword") Password
        .checkbox.mb-3.container
          label
            input(type="checkbox", value="remember-me")
            | Remember me
          label.justify-content-end
           span
            a(href="/signup") Sign Up
        a.w-100.btn.btn-lg.btn-primary(href="/" role="button") Sign in
        




 