doctype html
html(data-bs-theme="dark")
  head
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous")
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel="shortcut icon", href="../logo.svg", type="image/x-svg")
  title= title 
  body
  
  nav.navbar.navbar-light.bgd-color
   div.container-fluid
    if title == "Home"
     span.navbar-brand.mb-0.brand-color codeFuel 
    else 
      a.navbar-brand.h1(href = "/") codeFuel
    span.d-flex.justify-content-md-end
     a(
      class="btn btn-outline-light btn-bd-primary border-2 rounded-1" 
      href="#" 
      role="button" 
      data-bs-toggle="dropdown" 
      aria-expanded="false") Menu 
     ul.dropdown-menu.dropdown-menu-end
      li 
       a(class="dropdown-item" href="/review") Review
      li 
       a(class="dropdown-item" href="/about") About  
      li 
       a(class="dropdown-item" href="/contactus") Contact us
      li
       hr.dropdown-divider
      li
       a(class="dropdown-item" href="/upload") Upload
      li 
       a(class="dropdown-item" href="/catalog") Courses
  block content
  .container.justify-content-end
   footer.d-flex.flex-wrap.justify-content-between.align-items-center.py-3.my-4.border-top 
    .col-md-4.d-flex.align-items-center
     a.d-flex.align-items-center.md-4.link-body-emphasis.text-decoration-none(href="/")
      img.bi(src="../logo.svg", alt="logo" width="70" height="55")
     span.mb-3.mb-md-0.text-body-secondary(style="color: white;!important") &copy; 2023 Company, Inc
    ul.nav.col-md-4.justify-content-end
      li.nav-item
        a.nav-link.px-2.text-body-secondary(href="/review") Review
      li.nav-item
        a.nav-link.px-2.text-body-secondary(href="/about") About
      li.nav-item
        a.nav-link.px-2.text-body-secondary(href="/contactus") Contact us
      li.nav-item
        a.nav-link.px-2.text-body-secondary(href="/future") Future

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.min.js" integrity="sha384-heAjqF+bCxXpCWLa6Zhcp4fu20XoNIA98ecBC1YkdXhszjoejr5y9Q77hIrv8R9i" crossorigin="anonymous"></script>
  

